<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/forecast_view_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    app:behavior_hideable="false"
    app:behavior_peekHeight="218dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <com.theroom101.ui.sunsignbadge.SunSignBadgeView
        android:id="@+id/sunsign_badge"
        android:layout_width="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <com.theroom101.ui.sunsigncarousel.SunSignCarousel
        android:id="@+id/sunsign_carousel"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <com.delizarov.forecast.ui.BottomSheetTipView
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_gravity="center_horizontal" />

    <com.delizarov.forecast.ui.ForecastDetailsView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/forecast_details_view_bg_color" />

</LinearLayout>
